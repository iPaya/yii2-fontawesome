{
    "name": "ipaya/yii2-fontawesome",
    "description": "The FontAwesome extension for Yii2.",
    "homepage": "https://github.com/iPaya/yii2-fontawesome",
    "type": "yii2-extension",
    "keywords": [
        "yii2",
        "extension",
        "FontAwesome"
    ],
    "authors": [
        {
            "name": "Di Zhang",
            "email": "zhangdi_me@163.com"
        }
    ],
    "require": {
        "yiisoft/yii2": "*",
        "fortawesome/font-awesome": "v4.6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "psr-4": {
            "iPaya\\fontAwesome\\": "src"
        }
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
